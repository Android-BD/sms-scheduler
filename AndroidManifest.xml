<?xml version="1.0" encoding="utf-8"?>
<manifest 
  	xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinsol.sms_scheduler"
    android:versionCode="1"
    android:versionName="1.0">
    
    <uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name = "android.permission.SEND_SMS"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	
    <application android:icon="@drawable/icon" android:label="SMS Scheduler" android:theme="@android:style/Theme.NoTitleBar">    
        <activity android:name=".SmsSchedulerExplActivity" android:label="@string/app_name" android:screenOrientation="portrait">
        	
		</activity>
        
        <activity android:name = ".NewScheduleActivity" android:label = "Schedule New SMS" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait"></activity>
        <activity android:name = ".ManageTemplateActivity" android:label = "Manage Templates" android:screenOrientation="portrait"></activity>
        <activity android:name = "com.vinsol.sms_scheduler.EditSmsActivity" android:label = "Edit SMS" android:screenOrientation="portrait"></activity>
        <activity android:name = "com.vinsol.sms_scheduler.ContactsListActivity" android:label = "Contacts" android:screenOrientation="portrait"></activity>
        <activity android:name = ".Asap" android:label = "Asap" android:screenOrientation="portrait"></activity>
        <activity android:name = ".ManageGroupsActivity" android:label = "Manage Groups" android:screenOrientation="portrait"></activity>
        <activity android:name = ".GroupAddActivity" android:label = "New Group" android:screenOrientation="portrait"></activity>
            
        <activity android:name = ".SplashActivity" android:label = "Schedule New SMS" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<receiver android:name=".SMSHandleReceiver" android:enabled="true"></receiver>
		<receiver android:name=".SentReceiver" android:enabled="true"></receiver>
		<receiver android:name="com.vinsol.sms_scheduler.DeliverReceiver" android:enabled="true"></receiver>
    </application>
</manifest>