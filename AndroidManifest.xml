<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.vinsol.sms_scheduler"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name = "android.permission.SEND_SMS"/>
	
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        
        <activity android:name=".SmsSchedulerExplActivity" android:label="@string/app_name">
        	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
        
        <activity android:name = ".NewScheduleActivity" android:label = "Schedule New SMS">
        </activity>
        
        <activity android:name = ".ManageTemplateActivity" android:label = "Manage Templates">
        	
        </activity>
        
        <activity android:name = "com.vinsol.sms_scheduler.EditSmsActivity" android:label = "Edit SMS">
        	
        </activity>
        
		<receiver android:name=".SMSHandleReceiver" android:enabled="true"></receiver>
		
		<receiver android:name=".SentReceiver" android:enabled="true"></receiver>
		
		<receiver android:name="com.vinsol.sms_scheduler.DeliverReceiver" android:enabled="true"></receiver>
    </application>
</manifest>