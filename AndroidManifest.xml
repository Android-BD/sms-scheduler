<?xml version="1.0" encoding="utf-8"?>
<manifest 
  	xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinsol.sms_scheduler"
    android:versionCode="1"
    android:versionName="1.0">
    
    <uses-sdk android:minSdkVersion="4" />
	
	<uses-permission android:name = "android.permission.SEND_SMS"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	
    <application android:icon="@drawable/icon" android:label="SMS Scheduler" android:theme="@android:style/Theme.NoTitleBar">
        <!--  activities -->    
        <activity android:name = ".activities.SmsSchedulerExplActivity" android:screenOrientation="portrait" />
        <activity android:name = ".activities.NewScheduleActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait" />
        <activity android:name = ".activities.ManageTemplateActivity" android:screenOrientation="portrait" />
        <activity android:name = ".activities.EditSmsActivity" android:screenOrientation="portrait" />
        <activity android:name = ".activities.ContactsListActivity" android:screenOrientation="portrait" />
        <activity android:name = ".activities.ContactsTabsActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait" />
        <activity android:name = ".activities.Asap" android:screenOrientation="portrait" />
        <activity android:name = ".activities.ManageGroupsActivity" android:screenOrientation="portrait" />
        <activity android:name = ".activities.GroupAddActivity" android:screenOrientation="portrait" />
        <activity android:name = ".activities.EditScheduledSmsActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait" />
        <activity android:name = ".activities.GroupsTestActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait" />
        <activity android:name = ".activities.SplashActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       	<!--  receivers -->
        <receiver android:name =".receivers.SMSHandleReceiver" android:enabled="true" />
		<receiver android:name =".receivers.SentReceiver" android:enabled="true" />
		<receiver android:name =".receivers.DeliverReceiver" android:enabled="true" />
		<receiver android:name =".receivers.BootCompleteReceiver" android:process=":remote" android:enabled="true" android:exported="false"> 
        	<intent-filter>
            	<action android:name="android.intent.action.BOOT_COMPLETED" />
				<category android:name="android.intent.category.HOME" />
        	</intent-filter> 
		</receiver>
		
    </application>
</manifest>