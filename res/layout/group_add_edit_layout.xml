<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
    	android:layout_height = "60dp"
    	android:layout_width = "fill_parent"
    	android:layout_gravity="center_vertical"
    	android:background="#999999">
    	
        <ImageButton
    		android:id ="@+id/group_add_edit_done_image_button"
    		android:layout_height = "wrap_content"
    		android:layout_width = "wrap_content"
    		android:src="@drawable/ic_btn_write_sms"
    		android:layout_marginTop = "7dp"
    		android:layout_marginLeft="5dp"
    		android:layout_alignParentLeft="true"/>
        
        <Button 
            android:id = "@+id/group_add_edit_name_label"
    		android:layout_height = "wrap_content"
    		android:layout_width = "wrap_content"
    		android:layout_toRightOf="@id/group_add_edit_done_image_button"
    		android:layout_toLeftOf="@+id/group_add_edit_add_contact_image_button"
    		android:layout_margin = "7dp"
    		android:textSize="20sp"
    		android:textColor="#444444"
    		android:text = "Set Name"
    		android:gravity="center_horizontal"/>
        
    	<!--<TextView 
    	    android:id = "@+id/group_add_edit_name_label"
    		android:layout_height = "wrap_content"
    		android:layout_width = "wrap_content"
    		android:layout_toRightOf="@id/group_add_edit_done_image_button"
    		android:layout_toLeftOf="@+id/group_add_edit_add_contact_image_button"
    		android:paddingLeft="20dp"
    		android:paddingTop="5dp"
    		android:layout_margin = "5dp"
    		android:textSize="20sp"
    		android:textColor="#ffffff"
    		android:text = ""
    		android:gravity="center_horizontal"/>-->
    		
    	<ImageButton
    		android:id ="@id/group_add_edit_add_contact_image_button"
    		android:layout_height = "wrap_content"
    		android:layout_width = "wrap_content"
    		android:src="@android:drawable/ic_input_add"
    		android:layout_marginTop = "7dp"
    		android:layout_marginRight="5dp"
    		android:layout_alignParentRight="true"/>
    	
    </RelativeLayout>
    
    
    <ListView 
    	android:id = "@+id/group_add_edit_list"
    	android:layout_height = "wrap_content"
    	android:layout_width = "fill_parent"/>

</LinearLayout>