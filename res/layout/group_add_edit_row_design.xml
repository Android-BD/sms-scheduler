<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:background="@drawable/list_item_bg" >

    <ImageView 
			android:id = "@+id/list_divider"
			android:layout_height = "wrap_content"
			android:layout_width = "fill_parent"
			android:layout_alignParentTop="true"
			android:src="@drawable/list_divider"
	/>
    
    <ImageView 
        android:id = "@+id/group_add_edit_row_contact_pic"
        android:layout_height = "40dp"
        android:layout_width = "40dp"
        android:layout_alignParentLeft="true"
        android:layout_margin = "10dp"
        android:src="@drawable/contacts"/>
    
    <TextView 
        android:id = "@+id/group_add_edit_row_contact_name"
        android:layout_height = "wrap_content"
        android:layout_width = "210dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/group_add_edit_row_contact_pic"
        android:layout_margin="5dp"
        android:text = "Achin"/>
    
    <TextView 
        android:id = "@+id/group_add_edit_row_contact_number"
        android:layout_height = "wrap_content"
        android:layout_width = "210dp"
        android:layout_toRightOf="@id/group_add_edit_row_contact_pic"
        android:layout_below="@id/group_add_edit_row_contact_name"
        android:layout_marginLeft = "5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:text = "9811173722"
        android:textColor="#fbec5d"/>
	
    <LinearLayout 
        android:layout_height = "fill_parent"
        android:layout_width = "50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true">
        
        <ImageView
            android:id = "@+id/group_add_edit_row_delete_button"
            android:layout_height = "wrap_content"
            android:layout_width = "wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sent_failure_icon"/>
        
    </LinearLayout>
</RelativeLayout>