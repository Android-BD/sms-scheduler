<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="80dp"
  	android:background="@color/white"
 	android:paddingLeft="10dip"
 	android:paddingRight="10dip"
 	android:paddingTop="5dip"
 	android:paddingBottom="5dip"
 	>
 	
    <TextView 
   		android:id = "@+id/main_row_recepient_area"
   		android:layout_height = "wrap_content"
   		android:layout_width = "240dp"
   		android:text = "Mr.Reveiver"
   		android:textColor="@color/text_blue"
   		android:layout_alignParentTop="true"
   		android:layout_alignParentLeft="true"
   		android:paddingTop="5dip"
   		android:ellipsize="end"
   		>
  	</TextView>
   	
        
        
   	<TextView 
  		android:id = "@+id/main_row_date_area"
  		android:layout_height = "wrap_content"
  		android:layout_width = "240dp"
  		android:text ="DATE"
  		android:textColor="@color/text_blue"
  		android:layout_below="@id/main_row_recepient_area"
  		android:paddingTop="5dip"
  		>
 	</TextView>
        
        

   	
   	<TextView 
  		android:id = "@+id/main_row_message_area"
  		android:layout_width = "240dp"
  		android:layout_height="wrap_content"
  		android:maxLines="1"
  		android:textColor="@color/text_grey"
  		android:textSize="14dip"
  		android:textStyle="bold"
  		android:ellipsize="end"
  		android:layout_below="@id/main_row_date_area"
  		android:paddingTop="5dip"
  		>
	</TextView>
    		
  
   	    
   	<ImageView 
 		android:id = "@+id/main_row_image_area"
 		android:layout_height="36dp"
 		android:layout_width ="36dp"
 		android:layout_marginLeft="15dp"
 		android:layout_alignParentRight="true"
 		android:layout_alignBaseline="@id/main_row_date_area"
 		android:layout_centerVertical="true"
 		>
	</ImageView>
</RelativeLayout>
