<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height = "fill_parent"
	android:layout_width = "fill_parent"
	>
	<!-- Header -->
	<TextView
	    android:id="@+id/header"
	    android:layout_width = "fill_parent" 
		android:layout_height = "wrap_content"
		android:text = "Schedule SMS"
		android:textSize="24sp"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:background="@drawable/header_bg"
		android:gravity="center"
		>
	</TextView>
    
	<!-- footer -->    
	<LinearLayout 
		android:id="@+id/footer"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/footer_bg" 
		android:orientation="horizontal"
		android:gravity="center" 
		android:layout_alignParentBottom="true"
		>
		<Button 
			android:id="@+id/new_schedule_button"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginRight="3dip"
			android:background="@drawable/schedule_sms"
			>
		</Button>
		<Button 
			android:id="@+id/new_cancel_button"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dip"
			android:background="@drawable/cancel"
			>
		</Button>
	</LinearLayout>
	
	<!-- body -->
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/bg"
	    android:layout_below="@id/header"
	    android:layout_above="@id/footer"
	    >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:paddingLeft="10dip"
	    	android:paddingRight="10dip"
	    	>
		    <!-- contacts linear layout -->
			<RelativeLayout 
		    	android:layout_width = "fill_parent"
		    	android:layout_height = "wrap_content"
		    	android:layout_marginTop="10dp"
		    	>
		    	<AutoCompleteTextView
		    		android:id = "@+id/new_numbers_text"
		    		android:layout_width = "fill_parent"
		    		android:layout_height = "wrap_content"
		    		android:hint="To"
		    		android:minLines="2"
		    		android:maxLines="2"
		    		android:gravity="top"
		    		android:layout_toLeftOf="@+id/new_add_from_contact_imgbutton"
		    		>
	    		</AutoCompleteTextView>
		    		
		    	<ImageButton 
		    		android:id = "@id/new_add_from_contact_imgbutton"
		    		android:layout_width = "wrap_content"
		    		android:layout_height = "wrap_content"
		    		android:background="@drawable/contacts"
		    		android:layout_alignParentRight="true"
		    		android:layout_marginLeft="10dp"
		    		android:layout_centerVertical="true"
		    		>
	    		</ImageButton>		
	    	</RelativeLayout>
	    	
		    <!-- Date time button -->
		    <Button 
			   	android:id = "@+id/new_date_button"
			   	android:layout_width = "fill_parent"
			   	android:layout_height = "wrap_content"
			   	android:textColor="@color/text_color_grey"
			   	android:textSize="20sp"
			   	android:layout_marginTop="10dp"
			   	>
	    	</Button>
	    	
	     	<!-- message edit text -->
	     	<!-- message top layout -->
			<RelativeLayout 
		     	android:id="@+id/message_top_layout"    	
    			android:layout_width = "wrap_content"
		    	android:layout_height = "wrap_content"
		    	android:background="@drawable/message_top_bg"
		    	android:layout_marginTop="10dip"
		    	>
	    		<TextView
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:text = "Message"
	    			android:textSize="18sp"
	    			android:textStyle="bold"
	    			android:textColor="@color/white"
	    			android:layout_marginTop="5dp"
	    			android:layout_marginLeft = "15dp"
	    			android:layout_marginBottom="5dp"
	    			>
    			</TextView>
		    		
	    		<TextView
	    			android:id = "@+id/new_char_count_text"
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:text = "0 (0)"
	    			android:textSize="18sp"
	    			android:textStyle="bold"
	    			android:textColor="@color/white"
	    			android:paddingRight="15dp"
	    			android:layout_marginTop="5dp"
	    			android:layout_alignParentRight="true"
	    			>
    			</TextView>	
   			</RelativeLayout>
    		    
   		    <!-- message edit text -->
   		    <EditText
				android:id = "@+id/new_message_space" 
		   		android:layout_width="wrap_content" 
		   		android:layout_height="wrap_content"
		   		android:inputType="textMultiLine"
		   		android:gravity="top"
		   		android:hint="Type your Message here"
		   		android:background="@drawable/message_bg"
		   		android:padding="5dp"
		   		android:layout_below="@id/message_top_layout"
		   		android:maxLines="4"
		   		>
	   		</EditText>
	   		
   		    <!-- message bottom layout -->    
   		    <RelativeLayout 
	    		android:layout_height = "wrap_content"
	    		android:layout_width = "wrap_content"
	    		android:background="@drawable/message_bottom_bg"
	    		android:layout_below="@id/new_message_space"
				android:paddingLeft="15dip"
	    		android:paddingRight="15dip"
	    		>
	    		
	    		<ImageButton 
	    			android:id = "@+id/smiley_imgbutton"
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:layout_margin="2dp"
	    			android:background="@drawable/emoticon"	
	    			android:layout_alignParentLeft="true"
	    			>
    			</ImageButton>
	    		
	    		<ImageButton 
	    			android:id = "@+id/template_imgbutton"
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:layout_margin="2dp"
	    			android:background="@drawable/template"
	    			android:layout_toRightOf="@id/smiley_imgbutton"
	    			>
    			</ImageButton>
	    		
	    		<ImageButton 
	    			android:id = "@+id/spell_check_imgbutton"
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:layout_margin="2dp"
	    			android:background="@drawable/spell_check"	
	    			android:layout_toRightOf="@id/template_imgbutton"
	    			>
    			</ImageButton>
	    			
	    		<ImageButton 
	    			android:id = "@+id/speech_imgbutton"
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:layout_margin="2dp"
	    			android:background="@drawable/voice"
	    			android:layout_toRightOf="@id/spell_check_imgbutton"
	    			>
    			</ImageButton>
	    		
	    		<ImageButton 
	    			android:id = "@+id/add_template_imgbutton"
	    			android:layout_height = "wrap_content"
	    			android:layout_width = "wrap_content"
	    			android:layout_margin="2dp"
	    			android:background="@drawable/add_to_template"
	    			android:layout_alignParentRight="true"
	    			>
    			</ImageButton>
 			</RelativeLayout> 
 			
			<LinearLayout 
				android:id = "@+id/smiley_layout"
				android:orientation = "horizontal"
				android:layout_height= "120dp"
				android:layout_width = "fill_parent"
				android:layout_above="@+id/schedule_cancel_button_layout"
				android:visibility="gone"
				android:background="#555555"
				>
				<GridView 
		    		android:id = "@+id/smileysGrid"
		    		android:layout_height = "wrap_content"
		    		android:layout_width = "fill_parent"
		    		android:layout_alignParentTop="true"
		    		android:layout_above="@+id/addButton"
		    		android:columnWidth="35dp"
		   	 		android:numColumns="auto_fit"
		    		android:verticalSpacing="35dp"
		    		android:horizontalSpacing="10dp"
		    		android:stretchMode="columnWidth"
		    		android:gravity="center"
		    		>
	    		</GridView>
			</LinearLayout>       
   		</LinearLayout>
    </ScrollView>   
</RelativeLayout>
